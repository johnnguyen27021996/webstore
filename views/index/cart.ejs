<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Web Store</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <header>
        <nav class="menu-main">
            <ul class="menu">
                <li class="logo">WEBSTORE</li>
                <li><a href="/">HOME</a></li>
                <li><a href="">PRODUCT</a></li>
                <li><a href="/about">ABOUT US</a></li>
                <li><a href="/contact">CONTACT</a></li>
                <li class="cart-item"><a href="/cart">CART
                        <% if(cart == '' || cart == undefined){ %>
                        <span>0 item</span>
                        <% }else{ %>
                        <span><%= cart.length %> item</span>
                        <% } %>
                    </a></li>
                <div class="clear"></div>
            </ul>
        </nav>
    </header>

    <section class="cart-main">
        <h1 class="text-title">Your Cart</h1>
        <table>
            <thead>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </thead>
            <tbody class="cart-body">

                <% var total = 0;
                        if(cart){ %>
                <% cart.forEach(item=>{ 
                                total +=  parseInt(item.product.price)*parseInt(item.quantity);
                                %>
                <tr>
                    <td><%= item.product.name %></td>
                    <td><%= item.product.price %> <%= item.product.currency %></td>
                    <td><input type="number" name="quantity" id="quantity" data-id="<%= item.product._id %>"
                            value="<%= item.quantity %>"></td>
                    <td><%= parseInt(item.product.price)*parseInt(item.quantity) %> <%= item.product.currency %>
                    </td>
                </tr>
                <% }) %>
                <% }else{ %>
                <tr>
                    <td colspan="4">
                        <h1>NO ITEM IN CART</h1>
                    </td>
                </tr>
                <% } %>
                <tr>
                    <td colspan="4">
                        <h2>Total: <%= total %> USD</h2>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>

    <section class="new-product">
        // code o day
    </section>

    <footer>
        <p class="createby">2019 &copy; BY JOHN NGUYEN</p>
        <div class="social">
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-google-plus-g"></i>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="/js/cartaction.js"></script>

</body>

</html>